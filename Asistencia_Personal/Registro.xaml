<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asistencia_Personal.Registro">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="REGISTRO USUARIO" TextColor="Gray" FontSize="18" HorizontalOptions="Center" />
            <Entry x:Name="txtUser" Placeholder="ingrese user"/>
            <Entry x:Name="txtPass" Placeholder="ingrese password" IsPassword="True"/>
            <Entry x:Name="txtCorreo" Placeholder="ingrese correo" Keyboard="Email"/>
            <Entry x:Name="txtRol" Placeholder="ingrese rol"/>
            <Entry x:Name="txtobservaciones" Placeholder="ingrese comentario"/>

            <Entry x:Name="entry" Margin="20" />
            <Label x:Name="resultLocation" />
            <Button Text="Ubicacion Actual" Clicked="Button_Clicked" />
            
            <Button x:Name="btningresoUser" Text="GUARDAR" Clicked="btnGuardarUsuario"/>


            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>