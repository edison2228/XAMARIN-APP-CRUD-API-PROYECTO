<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asistencia_Personal.Update"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Usuario seleccionado" TextColor="Gray" FontSize="18" HorizontalOptions="Center" />
            
            <Entry x:Name="txtCodigo" Placeholder="User" IsEnabled="false"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese edad" />
            <Entry x:Name="txtUbic" Placeholder="Ubicacion" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnInsertar" Text="Eliminar" Clicked="btnInsertar_Clicked_1" Grid.Column="0"/>
                <Button x:Name="btnUpdate" Text="Actualizar" Clicked="btnUpdate_Clicked" Grid.Column="1"/>
                <Button x:Name="btnRegresar" Text="Regresar" Clicked="btnRegresar_Clicked" Grid.Column="2"/>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>